{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    //"eslint:recommended",
    //"plugin:vue/essential"
    "plugin:vue/vue3-recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["vue"],
  "rules": {
    "semi": "off",
    "vue/v-slot-style": "off",
    "vue/valid-v-slot": [
      "error",
      {
        "allowModifiers": true
      }
    ],
    "vue/no-deprecated-v-bind-sync": "off"
  }
}
